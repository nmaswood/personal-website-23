{
  "name": "personal-website-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "typecheck": "tsc -b",
    "build": "yarn workspace @personal-website/app build",
    "build:worker": "yarn workspace @personal-website/app build:worker",
    "deploy": "yarn workspace @personal-website/app deploy",
    "dev": "yarn workspace @personal-website/app dev"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^16.1.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.33.1"
  },
  "packageManager": "yarn@4.9.1"
}
